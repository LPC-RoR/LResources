<% if @elemento.despliegue == 'show' %>
	<%= render partial: get_partial(@elemento.controlador, nil, 'show') %>
<% elsif ['list', 'ulist'].include?(@elemento.despliegue) %>
	<%= render partial: '0p/general/gly_title_size', locals: {gly: controller_icon[@elemento.controlador], title: @elemento.sb_elemento, size: 4 } %>
	<% if partial?(@elemento.controlador, nil, 'index') %>
		<%= render partial: get_partial(@elemento.controlador, nil, 'index') %>
	<% else %>
		<%= render partial: '0p/tabla/tabla', locals: {c: @elemento.controlador} %>
	<% end %>
<% end %>
