<tr class="table-<%=table_row_type(objeto)%>">

	<td>
		<%= image_tag(objeto.app_imagen.thumb.url) if objeto.app_imagen? %>
	</td>

	<td>
		<i class="bi bi-file-image"></i>
		<small><%= objeto.orden %> : <%= link_to dma(objeto.created_at), objeto, class: 'sb-link' %> </small>
	</td>

	<td>
		<% unless objeto.orden == 1 %>
			<%= link_to "/app_imagenes/#{objeto.id}/arriba", class: 'sb-link' do %>
				<i class="bi bi-arrow-up-short"></i>
			<% end %>
		<% end %>
		<% unless objeto.orden == objeto.owner.imagenes.count %>
			<%= link_to "/app_imagenes/#{objeto.id}/abajo", class: 'sb-link' do %>
				<i class="bi bi-arrow-down-short"></i>
			<% end %>
		<% end %>
	</td>

	<td>
		<%= render partial: '0p/tabla/btn_editar', locals: {objeto: objeto} %>
		<% if not has_child?(objeto) %>
			<%= render partial: '0p/tabla/btn_eliminar', locals: {objeto: objeto} %>
		<% end %>
	</td>

</tr>