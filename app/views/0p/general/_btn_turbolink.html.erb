<% if delete == true %>
	<%= link_to link, data: {turbo_method: :delete, turbo_confirm: 'Esta seguro?' }, class: "btn btn-outline-#{clr} btn-sm" do %>
		<% unless gly.blank? %>
			<i class=<%="bi-#{gly}"%>></i>
		<% end %>
	    <%= texto unless texto.blank? %>
	<% end %>
<% else %>
	<%= link_to link, class: "btn btn-outline-#{clr} btn-sm" do %>
		<% unless gly.blank? %>
			<i class=<%="bi-#{gly}"%>></i>
		<% end %>
		<%= texto unless texto.blank? %>
	<% end %>
<% end %>
